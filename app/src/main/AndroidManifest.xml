<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hackathon.wah">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera"/>
    <application
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:name="com.hackathon.wah.helper.AppController"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity
            android:screenOrientation="portrait" android:name=".activity.MainActivity">
        </activity>
        <activity
            android:screenOrientation="portrait" android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait" android:name=".activity.PIlihKartuActivity">
        </activity>
        <activity
            android:screenOrientation="portrait" android:name=".activity.BukaRekeningActivity">
        </activity>
        <activity
            android:screenOrientation="landscape" android:name=".activity.MyCameraActivity">
        </activity>
        <activity
            android:screenOrientation="landscape" android:name=".activity.WefieActivity">
        </activity>
        <activity
            android:screenOrientation="portrait" android:name=".activity.BerhasilActivity">
        </activity>
        <activity
            android:screenOrientation="portrait" android:name=".activity.MamilesActivity">
        </activity>
        <activity
            android:screenOrientation="portrait" android:name=".activity.QuizActivity">
        </activity>
        <activity
            android:screenOrientation="portrait" android:name=".activity.BuyQuizActivity">
        </activity>
    </application>

</manifest>