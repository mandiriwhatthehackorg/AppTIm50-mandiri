<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.hackathon.wah.widget.customfont.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="mandiri"
                    android:textStyle="bold"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="#fff"/>
                <com.hackathon.wah.widget.customfont.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="online"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="#fff"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"/>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container"
            android:scrollbars="none">
            <RelativeLayout
                android:paddingBottom="80dp"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="6dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="fitCenter"
                            android:padding="12dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/image3"
                            android:background="@drawable/circle_1"
                            />
                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:layout_marginBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transfer"
                            android:textColor="#000"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/text_size_small"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="6dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="fitCenter"
                            android:padding="12dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/image4"
                            android:background="@drawable/circle_2"
                            />
                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:layout_marginBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bayar"
                            android:textColor="#000"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/text_size_small"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="6dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="fitCenter"
                            android:padding="12dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/image5"
                            android:background="@drawable/circle_3"
                            />
                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:layout_marginBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beli"
                            android:textColor="#000"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/text_size_small"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="6dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="fitCenter"
                            android:padding="12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/image6"
                            android:background="@drawable/circle_4"
                            />
                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:layout_marginBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="e-cash"
                            android:textColor="#000"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/text_size_small"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:id="@+id/top2"
                    android:layout_below="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="6dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="fitCenter"
                            android:padding="12dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/image7"
                            android:background="@drawable/circle_5"
                            />
                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:layout_marginBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="e-money"
                            android:textColor="#000"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/text_size_small"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="6dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="fitCenter"
                            android:padding="12dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/baseline_alarm_white_48dp"
                            android:background="@drawable/circle_6"
                            />
                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:layout_marginBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transaksi Tertunda"
                            android:lines="2"
                            android:textColor="#000"
                            android:gravity="center_horizontal"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/text_size_small"/>
                    </LinearLayout>
                    <LinearLayout
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="6dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="fitCenter"
                            android:padding="12dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/baseline_star_white_48dp"
                            android:background="@drawable/circle_7"
                            />
                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:layout_marginBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favoritku"
                            android:textColor="#000"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/text_size_small"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/mamilesLayout"
                        android:visibility="invisible"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="6dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="fitCenter"
                            android:padding="12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/image13"
                            android:background="@drawable/circle_8"
                            />
                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:layout_marginBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mamiles"
                            android:textColor="#000"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/text_size_small"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/rekening"
                    android:layout_marginTop="22dp"
                    android:id="@+id/rekening1"
                    android:layout_below="@+id/top2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.hackathon.wah.widget.customfont.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0F0F0"
                        android:paddingStart="18dp"
                        android:paddingLeft="18dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="#7A7A84"
                        android:textSize="@dimen/text_size_medium"
                        android:text="REKENING GIRO &amp; TABUNGAN"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/card"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_width="135.6dp"
                            android:layout_height="91.8dp"
                            android:src="@drawable/image1"
                            android:scaleType="fitCenter"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="14dp"
                            android:layout_marginRight="14dp"
                            />

                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_toStartOf="@+id/more"
                            android:layout_toEndOf="@+id/card"
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSecondary"
                            android:textSize="@dimen/text_size_medium"
                            android:ellipsize="end"
                            android:text="JONI ISKANDAR"
                            android:id="@+id/name"/>
                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:layout_toStartOf="@+id/more"
                            android:layout_toEndOf="@+id/card"
                            android:layout_below="@+id/name"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#7A7A84"
                            android:textSize="@dimen/text_size_small"
                            android:ellipsize="end"
                            android:text="0123 4567 8910 1112"/>
                        <ImageView
                            android:layout_marginEnd="24dp"
                            android:layout_marginRight="24dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:id="@+id/more"
                            android:layout_width="5dp"
                            android:layout_height="19dp"
                            android:src="@drawable/group"
                            android:scaleType="fitCenter"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="18dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/rekening"
                    android:layout_marginTop="22dp"
                    android:id="@+id/rekening2"
                    android:layout_below="@+id/rekening1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.hackathon.wah.widget.customfont.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0F0F0"
                        android:paddingStart="18dp"
                        android:paddingLeft="18dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="#7A7A84"
                        android:textSize="@dimen/text_size_medium"
                        android:text="REKENING KARTU KREDIT"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/card2"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_width="135.6dp"
                            android:layout_height="91.8dp"
                            android:src="@drawable/image2"
                            android:scaleType="fitCenter"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="14dp"
                            android:layout_marginRight="14dp"
                            />

                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_toStartOf="@+id/more2"
                            android:layout_toEndOf="@+id/card2"
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSecondary"
                            android:textSize="@dimen/text_size_medium"
                            android:ellipsize="end"
                            android:text="JONI ISKANDAR"
                            android:id="@+id/name2"/>
                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:layout_toStartOf="@+id/more2"
                            android:layout_toEndOf="@+id/card2"
                            android:layout_below="@+id/name2"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#7A7A84"
                            android:textSize="@dimen/text_size_small"
                            android:ellipsize="end"
                            android:text="0123 4567 8910 1112"/>
                        <ImageView
                            android:layout_marginEnd="24dp"
                            android:layout_marginRight="24dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:id="@+id/more2"
                            android:layout_width="5dp"
                            android:layout_height="19dp"
                            android:src="@drawable/group"
                            android:scaleType="fitCenter"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="18dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/rekening"
                    android:layout_marginTop="22dp"
                    android:id="@+id/rekening3"
                    android:layout_below="@+id/rekening2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.hackathon.wah.widget.customfont.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0F0F0"
                        android:paddingStart="18dp"
                        android:paddingLeft="18dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="#7A7A84"
                        android:textSize="@dimen/text_size_medium"
                        android:text="REKENING MAMILES"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/card3"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_width="135.6dp"
                            android:layout_height="91.8dp"
                            android:src="@drawable/kartubiru"
                            android:scaleType="fitCenter"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="14dp"
                            android:layout_marginRight="14dp"
                            />

                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_toStartOf="@+id/more3"
                            android:layout_toEndOf="@+id/card3"
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSecondary"
                            android:textSize="@dimen/text_size_medium"
                            android:ellipsize="end"
                            android:text="RONI ISKANDAR"
                            android:id="@+id/name3"/>
                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:layout_toStartOf="@+id/more3"
                            android:layout_toEndOf="@+id/card3"
                            android:layout_below="@+id/name3"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#7A7A84"
                            android:textSize="@dimen/text_size_small"
                            android:ellipsize="end"
                            android:text="0123 4567 8910 1112"/>
                        <ImageView
                            android:layout_marginEnd="24dp"
                            android:layout_marginRight="24dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:id="@+id/more3"
                            android:layout_width="5dp"
                            android:layout_height="19dp"
                            android:src="@drawable/group"
                            android:scaleType="fitCenter"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="18dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/rekening"
                    android:layout_marginTop="22dp"
                    android:id="@+id/rekening4"
                    android:layout_below="@+id/rekening3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.hackathon.wah.widget.customfont.CustomFontTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0F0F0"
                        android:paddingStart="18dp"
                        android:paddingLeft="18dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="#7A7A84"
                        android:textSize="@dimen/text_size_medium"
                        android:text="BUKA REKENING BARU"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_marginStart="10dp"
                            android:id="@+id/plus"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:padding="32dp"
                            android:layout_width="120dp"
                            android:layout_height="82dp"
                            android:src="@drawable/plussquare"
                            android:scaleType="centerInside"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="14dp"
                            android:layout_marginRight="14dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:elevation="4dp">
        <ScrollView
            android:scrollbars="none"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="80dp">
                    <FrameLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:background="@drawable/white_circle_drawable">
                        <com.hackathon.wah.widget.customfont.CustomFontTextView
                            android:layout_gravity="center"
                            android:id="@+id/drawer_header_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_larger"
                            android:textColor="#fff"
                            android:text="JI"/>
                    </FrameLayout>

                    <com.hackathon.wah.widget.customfont.CustomFontTextView
                        android:layout_marginTop="12dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/drawer_header_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium_large"
                        android:textColor="#000"
                        android:text="JONI ISKANDAR"
                        />
                </LinearLayout>
                <com.hackathon.wah.widget.NonScrollListView android:id="@+id/drawer_list"
                    android:layout_marginTop="48dp"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:choiceMode="singleChoice"
                    android:scrollbars="none"
                    />
            </LinearLayout>
        </ScrollView>

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>